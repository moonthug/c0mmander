{
  "name": "@h0me/c0mmander",
  "version": "0.2.0",
  "description": "",
  "main": "dist/index.js",
  "bin": {
    "tp-server": "./bin/c0mmander"
  },
  "directories": {
    "src": "src",
    "bin": "bin"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:docker": "npm run build && docker build --no-cache -t polygl0t/c0mmander:latest .",
    "build:docker:push": "docker push polygl0t/c0mmander:latest",
    "prebuild": "rm -rf ./dist",
    "start": "node dist/index.js",
    "start:debug": "ts-node src/index.ts",
    "start:example": "node bin/tp-server ../examples/config.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "mocha -r ts-node/register src/**/*.test.ts",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test",
    "watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moonthug/tp-server.git"
  },
  "author": "Alex Coulcher <alex@polyglot.rodeo> (http://polyglot.rodeo/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/moonthug/tp-server/issues"
  },
  "homepage": "https://github.com/moonthug/tp-server#readme",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/koa": "^2.13.1",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.14.27",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.20.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "handlebars": "^4.7.7",
    "http-status-codes": "^2.1.4",
    "joi": "^17.4.0",
    "koa": "^2.13.1",
    "koa-router": "^10.0.0",
    "todoist": "^0.4.0",
    "trello": "^0.10.0",
    "twilio": "^3.58.0"
  }
}
